  var form = $("$formId");
  var element = form.down('*[id=${classname}_${objnum}_${propname}]');
  var validator = LiveValidationForm.getLiveValidationInstance(form, element);
  validator.displayMessageWhenEmpty = "$!{failureMessage}";
  validator.add( Validate.Email, {
    failureMessage: "$!{failureMessage}"
  });
});
&lt;/script&gt;
