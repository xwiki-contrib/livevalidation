#set ($propref = $services.model.resolveObjectProperty($xcontext.macro.params.get('property')))
## Initialize ${classname}, ${objnum} and ${propname}
#serializePropertyReference($propref)
{{html}}
&lt;script type='text/javascript'&gt;
document.observe('xwiki:dom:loaded', function(){
    LiveValidationForm.addValidation(
        $("${escapetool.javascript($xcontext.macro.params.get('form'))}"),
        $("${classname}_${objnum}_${propname}"),
        Validate.Custom,
        {
            against: function(value, args) {
                return LiveValidationForm.ajaxValidator(
                    "${xwiki.getURL($xcontext.macro.params.get('against'), 'view', "xpage=plain&amp;outputSyntax=plain&amp;$!{xcontext.macro.params.get('args')}")}",
                    {
                        input:value,
                        propref: "$services.model.serialize($propref, 'default')"
                    }
                );
            }
        },
        "$!{escapetool.javascript($xcontext.macro.params.get('failureMessage'))}"
    );
});
&lt;/script&gt;
{{/html}}
{{/velocity}}</code>
